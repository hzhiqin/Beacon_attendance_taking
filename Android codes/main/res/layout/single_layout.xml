<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="huang.zhiqin.attendance.SingleActivity">

    <Toolbar
        android:id="@+id/toolbar_single"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:titleTextColor="@color/colorBarText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView_single"
        android:layout_below="@+id/toolbar_single"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="@color/colorAccent" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_single"
        android:layout_below="@+id/textView_single"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
